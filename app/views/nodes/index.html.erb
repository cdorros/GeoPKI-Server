<h1>Merkle Hash Tree</h1>

<table border="1">
  <tr>
  	<th>ID</th>
    <th>Parent</th>
    <th>L child</th>
    <th>R child</th>
    <th>Sha</th>
    <th>Level</th>
    <th>IsRightChild</th>
    <th></th>
    <th></th>
  </tr>

<% @nodes.each do |node| %>
  <tr>
  	<td><%= node.id %></td>
    <td><%= node.parent %></td>
    <td><%= node.l_child %></td>
    <td><%= node.r_child %></td>
    <td><%= node.sha %></td>
    <td><%= node.level %></td>
    <td><%= node.is_right_child %></td>

    <td><%= link_to 'Show', node %></td>
    <td><%= link_to 'Edit', edit_node_path(node) %></td>
    <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

